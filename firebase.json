{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/public/template",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**/*",
        "function": "api"
      }
    ],
    "predeploy": [
      "npm run affected:build"
    ]
  },
  "functions": {
    "source": ".",
    "predeploy": [
      "npm run build:api"
    ]
  }
}
